<!DOCTYPE html>
<html lang="en">
    <head>
        <title>My Project</title>
        <link rel="stylesheet" href="/public/style-5.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <link rel="icon" href="assets/logo.png">
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
              <a class="navbar-brand" href="#">
                  <img src="/public/assets/logo.png" alt="">
              </a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active" href="/add-project">Add My Project</a>
                  </li>
                </ul>
                <a href="/contact" target="blank" id="contact-me">
                    Contact Me  
                </a>
              </div>
            </div>
        </nav>


        <section class="container-1">
            <div class="form-container mt-5">    
                {{#each card}}
                <form action="/update" method="POST">
                    <h4>UPDATE MY PROJECT</h4>
                        <div class="project-input mt-5">
                            <label for="project">Project Name</label>
                            <input type="text" id="project" name="name" required value="{{this.name}}">
                        </div>
    
                        <div class="date-input">
                            <div class="start-date">
                                <label for="start-input">Start Date</label>
                                <input type="date" required name="start" id="start-input" value= "{{this.start_date}}">
                            </div>
                            <div class="end-date">
                                <label for="end-input">End Date</label>
                                <input type="date" required name="end" id="end-input" value= "{{this.end_date}}">
                            </div>
                        </div>
    
                        <div class="desc-input">
                            <label for="desc">Description</label>
                            <textarea name="desc" id="description" cols="30" rows="10">{{this.description}}</textarea>
                        </div>
    
                        <div class="tech-input">
                            <label for="check-box-detail">Technologies</label>  
                            <div class="left-checkbox">                            
                                {{#if this.node}}
                                <div>
                                    <input value="true" type="checkbox" id="node" name="node" checked>
                                    <label for="node">Node JS</label>                            
                                </div>
                                {{else}}
                                <div>
                                    <input value="true" type="checkbox" id="node" name="node">
                                    <label for="node">Node JS</label>                            
                                </div>
                                {{/if}}
                                {{#if react}}
                                <div>
                                    <input value="true" type="checkbox" id="react" name="react" checked>
                                    <label for="react">React JS</label>
                                </div>
                                {{else}}
                                <div>
                                    <input value="true" type="checkbox" id="react" name="react">
                                    <label for="react">React JS</label>
                                </div>
                                {{/if}}
                            </div>          

                            <div class="right-checkbox mb-2">
                                {{#if next}}
                                <div>
                                    <input value="true" type="checkbox" id="next" name="next" checked>
                                    <label for="next">Next JS</label>
                                </div>
                                {{else}}
                                <div>
                                    <input value="true" type="checkbox" id="next" name="next">
                                    <label for="next">Next JS</label>
                                </div>
                                {{/if}}
                                {{#if type}}
                                <div>
                                    <input value="true" type="checkbox" id="type" name="type" checked>
                                    <label for="type">Type Script</label>
                                </div>
                                {{else}}
                                <div>
                                    <input value="true" type="checkbox" id="type" name="type">
                                    <label for="type">Type Script</label>
                                </div>
                                {{/if}}
                            </div>
                        </div>

                        <div class="input-group mb-3 mt-3">
                            <input type="file" class="form-control" id="inputGroupFile02" name="img">
                            <label class="input-group-text" for="inputGroupFile02" id="upload">Upload</label>
                        </div>
    
                        <div class="btn-submit">
                            <button>submit</button>
                        </div>                                    
                </form>
                {{/each}}
            </div>
        </section>

        
    </body>
    
</html>