        <div class="container mt-2">
            <div class="cont-2">
                <h4>MY PROJECT</h4>
                    <div class="project-list grid" id="project-list">
                        {{#each card}}
                        <div class="project-list-item g-col-4">
                            <a href="project-detail/{{this.id}}">
                                <div class="card-img">
                                    <img src="/public/assets/my-img.jpg" alt="">
                                </div>                    
                                <div class="card-title">
                                    <h3>{{this.name}}</h3>
                                </div>    
                                <div class="card-drt">
                                    <p>{{this.duration}}</p>
                                </div>
                                <div class="card-desc">
                                    <p>{{this.description}}</p>
                                </div>
                                <div class="card-icon">
                                    {{#if this.next}}
                                    <img id="next" src="/public/assets/next.png" alt="">
                                    {{/if}}
                                    {{#if this.node}}
                                    <img id="node" src="/public/assets/node.png" alt="">
                                    {{/if}}
                                    {{#if this.react}}
                                    <img id="react" src="/public/assets/react.png" alt="">
                                    {{/if}}
                                    {{#if this.type}}
                                    <img id="type" src="/public/assets/type.png" alt="">
                                    {{/if}}                            
                                </div>
                            </a>
                            <div class="card-btn">
                                <div class="edit-btn">
                                    <a href="/update-project/{{this.id}}">
                                        <button>edit</button>
                                    </a>
                                </div>
                                <div class="del-btn">
                                    <a href="/delete-project/{{this.id}}">
                                        <button>delete</button> 
                                    </a>
                                </div>
                            </div>
                        </div>                                                                         
                        {{/each}}
                    </div>        
            </div>
